<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info', user: @user %>

      <%= render 'form', book_new: @book_new %>

    </div>
    <div class="col-md-8 offset-md-1">
      <table class="table">
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <%= @books.each do |book| %>
        <tr>
          <td>
            <%= image_tag book.user_id.get_profile_image(100, 100) %>
          </td>
          <td>
            <%= book.title %>
          </td>
          <td>
            <%= book.body %>
          </td>
        </tr>
        <% end %>
      </table>

    </div>
  </div>
</div>